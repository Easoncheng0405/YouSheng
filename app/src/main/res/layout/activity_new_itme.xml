<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:stv="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".notify.NewItemActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.wuhenzhizao.titlebar.widget.CommonTitleBar
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            stv:fillStatusBar="true"
            stv:leftDrawable="@drawable/back"
            stv:leftText="  添加新事项"
            stv:leftTextColor="@color/white"
            stv:leftTextSize="20sp"
            stv:leftType="textView"
            stv:rightText="添加 "
            stv:rightTextColor="@color/white"
            stv:rightTextSize="20sp"
            stv:rightType="textView"
            stv:statusBarColor="@color/colorPrimaryDark"
            stv:titleBarColor="@color/colorPrimary"
            stv:titleBarHeight="60dp" />

        <EditText
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/edit_text"
            android:hint="@string/new_item_hint"
            android:inputType="text"
            android:textSize="16sp" />

        <com.allen.library.SuperTextView
            android:id="@+id/time"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:visibility="gone"
            stv:sRightIconRes="@mipmap/arrow_right"
            stv:sShapeCornersRadius="3dp"
            stv:sShapeStrokeColor="@color/gray"
            stv:sShapeStrokeWidth="0.3dp"
            stv:sUseShape="true" />

        <com.allen.library.SuperTextView
            android:id="@+id/notify"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            stv:sLeftTextString="提醒"
            stv:sRightViewType="switchBtn"
            stv:sShapeCornersRadius="3dp"
            stv:sShapeStrokeColor="@color/gray"
            stv:sShapeStrokeWidth="0.3dp"
            stv:sUseShape="true" />
    </LinearLayout>

    <com.allen.library.SuperTextView
        android:id="@+id/ok"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        stv:sCenterTextColor="@color/white"
        stv:sCenterTextSize="20sp"
        stv:sCenterTextString="添加"
        stv:sShapeCornersRadius="3dp"
        stv:sShapeSelectorNormalColor="@color/colorPrimary"
        stv:sShapeSelectorPressedColor="@color/gray"
        stv:sUseShape="true" />
</RelativeLayout>