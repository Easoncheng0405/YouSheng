<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:stv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="21dp"
        android:layout_marginBottom="12dp"
        android:textSize="14sp"/>

    <com.allen.library.SuperTextView
        android:id="@+id/habit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:padding="8dp"
        stv:sCenterSpaceHeight="3dp"
        stv:sCenterTextSize="16sp"
        stv:sLeftBottomTextColor="@color/gray"
        stv:sLeftBottomTextSize="14sp"
        stv:sLeftTextColor="@color/black"
        stv:sLeftTextSize="16sp"
        stv:sLeftTextString=""
        stv:sLeftBottomTextString=""
        stv:sLeftViewGravity="left_center"
        stv:sShapeCornersRadius="3dp"
        stv:sShapeStrokeColor="@color/gray"
        stv:sShapeStrokeWidth="0.3dp"
        stv:sUseShape="true" />

</LinearLayout>